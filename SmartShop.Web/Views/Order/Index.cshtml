@model OrderVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="tab-pane mt-5" id="order-list">
  
        <div class="row">
            <div class="col-lg-8 mx-auto ck-cart-info ">
                <h5 class="mb-3">YOUR PLACED ORDERS</h5>
                @if (Model.Orders.Count > 0)
                {
