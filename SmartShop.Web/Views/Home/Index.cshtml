<section class="slider">
    <div id="demo" class="carousel slide demo-slider" data-ride="carousel">
        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
        </ul>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/assets/img/slider1.jpg" alt="Los Angeles" width="1100" height="500">
                <div class="div-center text-white">
                    <h3>Big discount</h3>

                    <p>Nice collection!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/assets/img/slider2.jpg" alt="Chicago" width="1100" height="500">
                <div class="div-center text-white">
                    <h3>Buy Now</h3>
                    <p>Big discount</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/assets/img/slider3.jpg" alt="New York" width="1100" height="500">
                <div class="div-center text-white">
                    <h3>Buy now</h3>
                    <p>New Campaign</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#demo" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#demo" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
        <div class="slider-overlay"></div>
    </div>
