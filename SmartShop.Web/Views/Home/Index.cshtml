<!-- mobile view-->
<div class="by-shop mt-5 d-block d-lg-none d-md-none d-xl-none">
    <div class="container ck-cart-info">
        <h5>Menu</h5>
        <div class="owl-carousel menu-carousel owl-theme owl-loaded">
            <div class="owl-stage-outer">
                <div class="owl-stage round-box">
                    <div class="owl-item">
                        <a href="product.html">
                            <img src="~/assets/img/menu1.png" alt="">
                        </a>
                        <p class="text-center">Campaign</p>
                    </div>
                    <div class="owl-item">
                        <a href="product.html">
                            <img src="~/assets/img/menu2.png" alt="">
                        </a>
                        <p class="text-center">Gift Card</p>
                    </div>
                    <div class="owl-item">
                        <a href="product.html">
                            <img src="~/assets/img/menu3.png" alt="">
                        </a>
                        <p class="text-center">Order</p>
                    </div>
                    <div class="owl-item">
                        <a href="product.html">
                            <img src="~/assets/img/menu1.png" alt="">
                        </a>
                        <p class="text-center">News Feed</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- by products-->
<div class="by-product mt-5 mb-5">
    <div class="container ck-cart-info">
        @if (Model.Subcategories.Count>0)
        {

            @foreach (var c in Model.Subcategories)
            {


                <partial name="_ProductPartial" model="@Model.Products.Where(x => x.Subcategory.SubcategoryName.Equals(c.SubcategoryName))" />

            }
        }


    </div>
</div>


